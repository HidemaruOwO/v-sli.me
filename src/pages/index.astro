---
import Layout from "@/layouts/Layout.astro";
import { Image } from "astro:assets";

import icon from "@/assets/icon.png";
import background from "@/assets/background.svg";
---

<Layout
	title="ぷよすきー"
	description="ぷよすきーはひでまるが送るWebサービスです。ひでまるの成果物やMisskeyなどホストしてます。"
	><div id="container">
		<img
			id="background"
			src={background.src}
			alt="background"
			fetchpriority="high"
		/>
		<main class="flex flex-col items-start justify-center p-4">
			<div class="text-center items-center justify-center mx-auto">
				<Image
					src={icon}
					alt="my icon"
					width={140}
					height={140}
					class="mx-auto"
				/>
				<h1 class="text-4xl mt-6">
					<style is:inline>
						@font-face {
							font-family: SubsetFont-47987150-b49f-4862-a88a-e2d54e84e933;
							src: url("data:application/font-woff2;charset=utf-8;base64,")
								format("woff2");
						}
					</style>
					<div
						style="font-family: SubsetFont-47987150-b49f-4862-a88a-e2d54e84e933;"
					>
						ぷよすきー
					</div>
				</h1>
				<p class="mt-6"></p>

				<p class="text-gray-500 dark:text-gray-400">
					ひでまるの送るウェブサービスです。
					<a
						href="https://hide0.net/services"
						class="inline-flex items-center font-medium text-[#0f83fd] dark:text-blue-500 hover:underline"
					>
						サービスを見る
						<svg
							class="w-4 h-4 ms-2 rtl:rotate-180"
							aria-hidden="true"
							xmlns="http://www.w3.org/2000/svg"
							fill="none"
							viewBox="0 0 14 10"
						>
							<path
								stroke="currentColor"
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2"
								d="M1 5h12m0 0L9 1m4 4L9 9"></path>
						</svg>
					</a>
				</p>

				<section id="links"></section>
			</div>
		</main>
	</div>

	<style></style>
</Layout>
